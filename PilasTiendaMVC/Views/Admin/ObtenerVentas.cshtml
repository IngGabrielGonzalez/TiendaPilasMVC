@model List<PilasTiendaMVC.Pilas.Entities.Ventas>

@{
    Layout = "~/Views/Shared/maestra.cshtml";

}

<h2 class="text-center">Listado de Ventas</h2>
<br />
<table class="table table-hover table-responsive table-striped text-center">
    <tr>
        <th>idProducto</th>
        <th>Cantidad</th>
        <th>Nombre</th>
        <th>Fecha</th>
    </tr>
    @foreach (var v in Model)
    {
        <tr>
            <td>@v.idProducto</td>
            <td>@v.Cantidad</td>
            <td>@v.Nombre</td>
            <td>@v.Fecha</td>
        </tr>
    }
</table>

@if (ViewBag.ErrorMessage != null)
{
    <br />
    <p>@ViewBag.ErrorMessage</p>
}
