@model PilasTiendaMVC.Pilas.Entities.Pila


@{
    Layout = "~/Views/Shared/maestra.cshtml";

}

<div class="container text-center">
    <h2>Editar Producto</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <p>@ViewBag.ErrorMessage</p>
    }
    else
    {
        using (Html.BeginForm("Editar", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.PilaId)

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new {@class = "form-label fw-bold"})
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.Fecha, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Imagen, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.Imagen, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(model => model.Stock, new { @class = "form-control" })
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Guardar</button>
        }

    }
</div>
